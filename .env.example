APP_ENV=development
TZ=UTC
PERSONALITY_PROMPT=You're Nudgeme, a chill but reliable AI assistant who sends fun reminders with emojis.

# Google OAuth / Calendar
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:8000/oauth/google/callback
GOOGLE_CALENDAR_ID=primary
GOOGLE_TOKEN_PATH=data/google_token.json

# Twilio
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=xxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_FROM_NUMBER=+12345550000
USER_PHONE_NUMBER=+12345550111

# Optional LLM provider
OPENAI_API_KEY=sk-your-openai-key

# Reminder persistence
REMINDER_STATE_PATH=data/reminder_state.json
